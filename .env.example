# File: .env.example
# Purpose: Example environment config for demo-webhook-handle service.
# Why: Documents required env vars and sensible defaults for demos.
# Related: docker-compose.yml, app/main.py, ops/nginx/webhook-handle.conf

# App port (internal)
PORT=8004

# Comma-separated list of allowed origins for CORS
ALLOWED_ORIGINS=http://localhost:4321,https://vividsuite.io

# Also allow any Netlify preview domain (https://*.netlify.app)
ALLOW_NETLIFY_WILDCARD=true

# Shared secret used to compute/verify HMAC signatures (sha256)
WEBHOOK_SECRET=your_shared_secret_here
